{
    "name": "estrella-template",
    "private": true,
    "scripts": {
        "dev": "node configs/estrella/dev",
        "build": "node configs/estrella/prod",
        "start": "node dist/app",
        "validate": "tsc --noEmit",
        "test": "jest --coverage",
        "git:commit": "git-cz",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint -- --fix",
        "eslint:all": "pnpm eslint -- \"**/*.{md,json,y?(a)ml,js,ts}\"",
        "eslint:fix:all": "pnpm eslint:all -- --fix",
        "lint": "pnpm eslint:all",
        "format": "pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint && pnpm test",
        "prepare": "husky install"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.js"
        }
    },
    "lint-staged": {
        "*.{md,json,y?(a)ml,js,ts}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.js",
    "eslintConfig": {
        "extends": "./configs/eslint/index.js",
        "ignorePatterns": [
            "!.travis.yml",
            "coverage",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "jest": {
        "moduleNameMapper": {
            "\\$/(.*)": "<rootDir>/src/$1"
        },
        "preset": "ts-jest",
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "dotenv": "10.0.0"
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.17.1",
        "@citrus-linting/prettier-config": "0.3.0",
        "@commitlint/cli": "13.1.0",
        "@types/eslint": "7.28.0",
        "@types/jest": "27.0.1",
        "@types/node": "16.7.10",
        "@types/prettier": "2.3.2",
        "@typescript-eslint/eslint-plugin": "4.30.0",
        "@typescript-eslint/parser": "4.30.0",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "defu": "5.0.0",
        "esbuild-node-externals": "1.3.0",
        "esbuild-plugin-clean": "0.1.3",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-jest": "24.4.0",
        "eslint-plugin-prettier": "4.0.0",
        "estrella": "1.4.1",
        "husky": "7.0.2",
        "jest": "27.1.0",
        "jest-extended": "0.11.5",
        "lint-staged": "11.1.2",
        "prettier": "2.3.2",
        "source-map-support": "0.5.19",
        "ts-jest": "27.0.5",
        "typescript": "4.4.2"
    }
}
